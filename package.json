{
  "name": "cuttlesoft-boilerplate",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "url": "https://github.com/cuttlesoft/cuttlesoft-boilerplate.mobile"
  },
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean --force",
    "clean:android": "cd android/ && ./gradlew clean && cd ..",
    "clean:ios": "rm -rf ios/build",
    "newclear": "rm -rf $TMPDIR/react-* && watchman watch-del-all && rm -rf ios/build && rm -rf node_modules/ && npm cache clean --force && npm i",
    "test:watch": "jest --watch",
    "updateSnapshot": "jest --updateSnapshot",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "android:build": "cd android && ./gradlew assembleRelease",
    "android:install": "cd android && ./gradlew assembleRelease && ./gradlew installRelease",
    "android:hockeyapp": "cd android && ./gradlew assembleRelease && puck -submit=auto app/build/outputs/apk/app-release.apk",
    "android:devices": "$ANDROID_HOME/platform-tools/adb devices",
    "android:logcat": "$ANDROID_HOME/platform-tools/adb logcat *:S ReactNative:V ReactNativeJS:V",
    "android:shake": "$ANDROID_HOME/platform-tools/adb devices | grep '\\t' | awk '{print $1}' | sed 's/\\s//g' | xargs -I {} $ANDROID_HOME/platform-tools/adb -s {} shell input keyevent 82",
    "storybook": "storybook start -p 7007",
    "lint": "eslint --ext js --ext jsx \"{src,ignite,storybook,tests,.}/**/*.{js,jsx}\"",
    "format": "prettier \"{src,ignite,storybook,tests,.}/**/*.{js,jsx}\" --write"
  },
  "dependencies": {
    "apisauce": "^1.0.2",
    "format-json": "^1.0.3",
    "identity-obj-proxy": "^3.0.0",
    "lodash": "^4.17.4",
    "prop-types": "15.7.2",
    "querystringify": "2.1.1",
    "ramda": "^0.25.0",
    "react": "16.8.3",
    "react-native": "^0.59.8",
    "react-native-animatable": "^1.3.0",
    "react-native-config": "^0.11.7",
    "react-native-device-info": "^2.0.1",
    "react-native-gesture-handler": "^1.2.1",
    "react-native-vector-icons": "6.4.2",
    "react-navigation": "^3.11.0",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-persist": "^5.10.0",
    "redux-saga": "^1.0.2",
    "reduxsauce": "1.1.0",
    "seamless-immutable": "^7.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.4",
    "@storybook/addon-storyshots": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/channels": "^5.0.11",
    "@storybook/react-native": "^4.1.18",
    "babel-eslint": "10.0.1",
    "babel-jest": "^24.8.0",
    "babel-preset-env": "^1.6.1",
    "enzyme": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.0",
    "eslint-plugin-jest": "^22.06.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "ignite-animatable": "^1.0.0",
    "ignite-dev-screens": "^2.3.0",
    "ignite-ir-boilerplate-andross": "^2.4.1",
    "ignite-redux-persist": "^1.1.2",
    "ignite-vector-icons": "^1.1.0",
    "jest": "^24.8.0",
    "metro-react-native-babel-preset": "^0.54.0",
    "mockery": "^2.1.0",
    "prettier": "^1.17.1",
    "react-dom": "16.8.6",
    "react-test-renderer": "16.8.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.js",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/tests/setup"
    ],
    "preset": "react-native"
  }
}
